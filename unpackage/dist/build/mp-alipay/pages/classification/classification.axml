<view class="classification"><view class="cates_container"><scroll-view class="left_menu" scroll-y="{{true}}"><view data-event-opts="{{[['tap',[['handTapLeftMenu',[index]]]]]}}" class="{{(('menu_item')+' '+((currentIndex==index)?'active':''))}}" onTap="__e" a:for="{{leftMenuList}}" a:for-item="item" a:for-index="index" a:key="index">{{item}}</view></scroll-view><scroll-view class="right_content" scroll-y="{{true}}" scroll-top="{{scrollTop}}" data-event-opts="{{[['scroll',[['scrollRightContent',['$event']]]]]}}" onScroll="__e"><block a:for="{{rightContent}}" a:for-item="item" a:for-index="index" a:key="index"><block a:if="{{item.children.length}}"><view class="shopping_group"><view class="shopping_group_title"><text class="delimiter">/</text><text class="title">{{item.cat_name}}</text><text class="delimiter">/</text></view><view class="shopping_group_list"><navigator a:for="{{item.children}}" a:for-item="child" a:for-index="childIndex" a:key="childIndex"><image mode="widthFix" src="{{child.cat_icon}}"></image><view class="shopping_name">{{child.cat_name}}</view></navigator></view></view></block></block></scroll-view></view></view>