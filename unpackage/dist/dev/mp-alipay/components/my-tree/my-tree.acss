.my-tree {
  width: 100%;
  list-style: none;
  font-size: 28rpx;
}
.my-tree .my-tree-item {
  box-sizing: border-box;
  width: 100%;
}
.my-tree .my-tree-item .my-tree-item-subtitle {
  position: relative;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.my-tree .my-tree-item .my-tree-item-subtitle .arrow {
  font-size: 28rpx;
  color: red;
  position: absolute;
  right: 10rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  -webkit-transition-duration: .3s;
          transition-duration: .3s;
}
.my-tree .my-tree-item .my-tree-item-subtitle .arrow.arrow-down {
  -webkit-transform: translateY(-50%) rotateZ(-90deg);
          transform: translateY(-50%) rotateZ(-90deg);
}
.my-tree .my-tree-item .my-tree-item-value {
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

