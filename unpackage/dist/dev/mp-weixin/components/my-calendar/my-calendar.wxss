  background-color: #38f;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner.hotel-end .day {
  color: #fff;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner.hotel-end .cnDay {
  color: #fff;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner .day {
  color: #000;
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
  text-align: center;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner .cnDay {
  font-size: 20rpx;
