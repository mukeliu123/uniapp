.my-calendar {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  height: 100vh;
  overflow: hidden;
  overflow-y: auto;
  background-color: #fff;
  padding-bottom: 200rpx;
}
.my-calendar .confirm {
  width: 100%;
  height: 120rpx;
  box-shadow: -1rpx -1rpx 1rpx 1rpx #eee;
  background-color: #fff;
  position: fixed;
  z-index: 1;
  left: 0;
  bottom: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.my-calendar .confirm .confirm-btn {
  width: 80%;
  margin: 0;
  border-radius: 50rpx;
  overflow: hidden;
  letter-spacing: 1rpx;
  font-size: 32rpx;
}
.my-calendar .weeks {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 1rpx solid #ccc;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  z-index: 1;
  background-color: #fff;
}
.my-calendar .weeks .weeks-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  width: calc(100% / 7);
}
.my-calendar .month {
  width: 99%;
  margin: 0 auto;
  margin-top: 100rpx;
  text-align: center;
}
.my-calendar .month .month-item {
  width: 100%;
  margin-bottom: 50rpx;
}
.my-calendar .month .month-item .item-title {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 28rpx;
}
.my-calendar .month .month-item .item-list {
  width: 100%;
  margin-top: 20rpx;
}
.my-calendar .month .month-item .item-list .list-row {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.my-calendar .month .month-item .item-list .list-row .row-item {
  box-sizing: border-box;
  width: calc(100% / 7);
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  border-radius: 0;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner.no-work-day .day {
  color: #38f;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner.no-work-day .cnDay {
  color: #38f;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner.check-day {
  background-color: #38f;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner.check-day .day {
  color: #fff;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner.check-day .cnDay {
  color: #fff;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner.hotel-start {
  background-color: #38f;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner.hotel-start .day {
  color: #fff;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner.hotel-start .cnDay {
  color: #fff;
}
.my-calendar .month .month-item .item-list .list-row .row-item .row-item-inner.hotel-section {
  background-color: #87b7ff;
}
